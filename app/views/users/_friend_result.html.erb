<div class="col-sm-9 no-right-padding no-left-padding" >
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td>
                <strong>Actions: </strong>
                <%= link_to "View Profile", "#", class: "btn btn-xs btn-success" %>
                <% if current_user.not_friends_with?(friend) %>
                  <%= link_to 'Follow friend?', friendship_path(friend), 
                              method: :delete, data: { confirm: "Are you sure?" }, 
                              class: "btn btn-xs btn-success" %>
                <% else %>
                  <span class="badge badge-secondary">
                    You are friends
                  </span>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>